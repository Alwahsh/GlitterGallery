- unless private_check
  = render 'permissions_error'
- else

  - content_for :title do
    = @project.name.titleize
    History

  - content_for :pagetitle do
    = link_to @project.name.titleize, @project.urlbase
    \/
    History

  = render 'project_toolbar'

  %hr
  
  %ul.history
    - @commits.each do |commit|
      %li
        .meta
          %p
            = commit.author[:name]
          %p
            = distance_of_time_in_words_to_now Time.at(commit.epoch_time)
            ago

        = link_to commit.message, File.join(@project.urlbase, 'commit', commit.tree_id), :class => 'commit'
    - if !@comments.nil?
      = will_paginate @comments, :style => 'color:blue' 



