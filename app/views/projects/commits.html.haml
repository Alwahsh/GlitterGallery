- content_for :head do
  = stylesheet_link_tag :projects
  
- unless private_check
  = render 'permissions_error'
- else

  - content_for :title do
    = @project.name.titleize


  %article
    %header
      %h1.generated 
        = @project.name
      %h2 
        FIXME - Descriptions are private, so they won't show up here.
        /= @project.desc

    %section
      = render 'project_toolbar'
  
    - if @project.private and params[:xid] != @project.uniqueurl
      = link_to 'Unique link', @project.urlbase
  
    %ul.history
      - @commits.each do |commit|
        %li
          .meta
            %p
              = commit.author[:name]
            %p
              = distance_of_time_in_words_to_now Time.at(commit.epoch_time)
              ago

          = link_to commit.message, File.join(@project.urlbase, 'commit', commit.tree_id), :class => 'commit'
      - if !@comments.nil?
        = will_paginate @comments, :style => 'color:blue' 



