- content_for :title do
  = current_user.username.titleize

%article.user
  %header
    %h1
      = avatar current_user.email
      = current_user.username
    %h2
      = '@' + current_user.username

  %section.toolbar
    %div.active
      %p
        = link_to 'Userpage', "/#{current_user.username}"
    %div
      %p
        = link_to 'Projects', File.join("/#{current_user.username}", 'projects')
    %div
      %p
        = link_to 'Glitterposts', File.join("/#{current_user.username}", 'glitterposts')
    %div
      %p
        = link_to 'Activity', File.join("/#{current_user.username}", 'activity')
    %div
      %p
        = link_to 'Badges', File.join("/#{current_user.username}", 'badges')

  %section
    %div
      %aside
        %h1
          User Settings
        %nav
          %ul
            %li
              = link_to 'Profile', edit_user_registration_path
            %li.active
              = link_to 'Identities', identities_path
            %li
              = link_to 'SSH Keys', identities_path
            %li
              = link_to 'Projects', identities_path

      %div.option
        -for identity in @identities
          = identity.provider
          = identity.uid
          = link_to "Delete", identity_path(identity.id), method:"delete", data: { confirm: "Are you sure?"}

        -for method in @allowedmethods
          =link_to(method.to_s.capitalize,"/auth/#{method.to_s}")