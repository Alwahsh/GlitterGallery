%div
  %div.active
    - if current_user.nil? 
      %a{href: "/#{@user.username}/follow"}
        %p Follow
        %p= @user.username
    - elsif current_user.follow? @user
      %a{href: "/#{@user.username}/unfollow", "data-remote" => true}
        %p Unfollow
        %p= @user.username
    -else
      %a{href: "/#{@user.username}/follow", "data-remote" => true}
        %p Follow
        %p= @user.username

  %div
    %a{href: "#"} 
      %p
        #{@user.followers.count}
    %a{href: "#"}
      %p
        Followers
  %div
    %a{href: "#"}
      %p
        #{@user.followings.count}
    %a{href: "#"}
      %p
        Following
