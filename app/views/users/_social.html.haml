%div
  %div.active
    - if current_user.nil? 
      %a{href: "/#{@user.username}/follow"}
        %p Follow
        %p= @user.username
    - elsif current_user.follow? @user
      =link_to "<p>Unfollow</p> <p>#{html_escape_once(@user.username)}</p>".html_safe, unfollow_user_path(@user), method: :delete, remote: true
    -else
      =link_to "<p>Follow</p> <p>#{html_escape_once(@user.username)}</p>".html_safe, follow_user_path(@user), method: :post, remote: true

  %div
    %a{href: "#"} 
      %p
        #{@user.followers.count}
    %a{href: "#"}
      %p
        Followers
  %div
    %a{href: "#"}
      %p
        #{@user.followings.count}
    %a{href: "#"}
      %p
        Following
