- if private_check
  - content_for :title do
    Create an issue for
    = @project.name

  %article{ data: 'blame' }
    %header
      %h1.generated
        = avatar @project.user.email
        %p
          %span
            = link_to @project.name, "/#{@user.username}/#{@project.name}"
          :escaped
            - New Issue

      %h2 Bugs, RFE's and questions about the project.

    = render 'shared/messages'
    = render 'projects/project_toolbar'

    %section
      %div
        .option
          = form_for(@issue, url: create_issue_path(@project.user, @project, description: params[:description])) do |f|
            = f.label :title
            = f.text_field :title, placeholder: 'Title', autofocus: true
            = f.label :description
            = f.text_area :description, value: params[:description], placeholder: '(Markdown Enabled)...'
            = f.label :tag_list
            = f.text_field :tag_list
            = f.label :type
            = f.select(:type, options_for_select([['Bug', 0], ['Improvement', 1]]))
            = f.submit 'Report Issue'

- else
  = render 'permissions_error'


