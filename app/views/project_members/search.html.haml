- if private_check
  - content_for :title do
    = @project.name.titleize

  %article.project{ data: 'setting' }
    = render 'projects/project_header'
    = render 'projects/project_toolbar'
    = render 'shared/messages'
    %section
      %div
        .option
          - if @users
            %header
              %h1
                Select role and click add:
            - @users.each do |user|
              = form_tag user_project_new_project_members_path(@project.user, @project) do
                = label_tag 'username', user.username
                = hidden_field_tag 'member_id', user.id
                = select(nil, 'role', roles)
                = submit_tag 'Add', name: nil
- else
  = render 'permissions_error'
